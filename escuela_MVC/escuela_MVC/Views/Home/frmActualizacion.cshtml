
@{
    ViewBag.Title = "Actualizacion de los datos";
    escuela_MVC.Models.Alumno Datos = ViewBag.Datos;
}

<div class="container">
    @using (Html.BeginForm("Actualizar","Home",FormMethod.Get))
    {
        <input type="hidden" name="txtID" value="@Datos.pkAlumno" />
        <div class="form-group">
            <label class="control-label col-xs-3">Nombre: </label>
            <div class="col-xs-9">
                <input type="text" name="txtNombre" value="@Datos.sNombre" class="form-control" placeholder="@Datos.sNombre"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-3">Apellido: </label>
            <div class="col-xs-9">
                <input type="text" name="txtApellido" value="@Datos.sApellido" class="form-control" placeholder="@Datos.sApellido" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-3">Grupo: </label>
            <div class="col-xs-9">
                <input type="text" name="txtGrupo" value="@Datos.sGrupo" class="form-control" placeholder="@Datos.sGrupo" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <input type="reset" value="Limpiar" class="btn btn-default"/>
            </div>
        </div>
    }
</div>

