
@{
    ViewBag.Title = "Catalogo de alumnos";
    List<escuela_MVC.Models.Alumno> Datos = ViewBag.Datos;
}

<div class="container">
    <div class="panel-default">
        <div class="panel-heading">Catalogo de alumnos </div> 
            <div class="panel-body">
                <table class="table table-condensed col-xs-12 " >
                    <thead>
                        <tr>
                            <td class="col-xs-2 text-center">Matricula</td>
                            <td class="col-xs-2 text-center">Nombre</td>
                            <td class="col-xs-4 text-center">Apellido</td>
                            <td class="col-xs-2 text-center">Grupo</td>
                            <td class="col-xs-5">Imagen</td>
                            <td class="col-xs-1"></td>
                        </tr>
                    </thead>
                    @foreach (escuela_MVC.Models.Alumno item in Datos)
                    {
                        <tr>
                            <td>@item.pkAlumno</td>
                            <td>@item.sNombre</td>
                            <td>@item.sApellido</td>
                            <td>@item.sGrupo</td>
                            <td><img src="@item.sImage" width="60xp"/></td>
                            <td>
                                <a href="~/Home/VerDetalle/@item.pkAlumno">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                </a>
                                &nbsp;
                                <a href="~/Home/frmActualizacion/@item.pkAlumno">
                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                </a>
                                &nbsp;
                                <a href="~/Home/borrar/@item.pkAlumno">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>          
    </div>
</div>
